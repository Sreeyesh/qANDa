<div class="login-box">
<div class="container">
	<h2>Please Login</h2>
	<hr>
	<%= form_for :sign_in, url: "/signin" do %>
	<div class="form-group">
	  <label for="email">Email:</label>
	  <input type="email" class="form-control" placeholder="Enter email" name="user[email]">
	</div>
	<div class="form-group">
	  <label for="pwd">Password:</label>
	  <input type="password" class="form-control" placeholder="Enter password" name="user[password]">
	</div>
	<hr>
	<button type="submit" class="btn btn-primary btn-block">Submit</button>
	<% end %>

	<div class="alert alert-info alert-dismissable">
		Not a Member yet? <a href="/signup" class="alert-link">Sign Up</a> here.
	</div>
</div>
</div>