      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </div>
    <div id="normalNavbar" class="collapse navbar-collapse">
		<ul class="nav navbar-nav navbar-right">
		<li><button class="btn btn-success navbar-btn" data-toggle="modal" data-target="#questionModal">Ask Questions</button></li>
		<li><a href="/user_details/1"><div class="navbar-text"><img src="http://www.gravatar.com/avatar/72be03093a6de30322123867f0b66441" class="img-circle" style="width:20px"><%= current_user_email %></div></a> </li>
